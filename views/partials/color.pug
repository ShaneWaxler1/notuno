    let redColorPickerButton = document.getElementById("redColorPickerButton");
    let blueColorPickerButton = document.getElementById("blueColorPickerButton");
    let greenColorPickerButton = document.getElementById("greenColorPickerButton");
    let yellowColorPickerButton = document.getElementById("yellowColorPickerButton");
     redColorPickerButton.addEventListener("click",function()
    {
        let playUrl = redColorPickerButton.value;
        console.log(playUrl);
        let json = fetch(playUrl,{ method: "POST" }).then((response) => response.json());
        disableAll()
    });
