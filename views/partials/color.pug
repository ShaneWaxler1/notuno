        console.log(playUrl)
        let json = fetch(playUrl,{ method: "POST" }).then((response) => response.json());
        disableAll()
    });
    yellowColorPickerButton.addEventListener("click",function()
    {
        let playUrl = yellowColorPickerButton.value;
        console.log(playUrl)
        let json = fetch(playUrl,{ method: "POST" }).then((response) => response.json());
        disableAll()
